# Application
APP_NAME=CASS
APP_VERSION=1.0.0
DEBUG=True
ENVIRONMENT=development

# Database
DATABASE_URL=postgresql+asyncpg://cass_user:cass_password@localhost:5432/cass_db

# Security
SECRET_KEY=your-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS
BACKEND_CORS_ORIGINS=["http://localhost:3000","http://localhost:8080"]

# File Storage (S3/MinIO)
STORAGE_TYPE=s3  # s3, azure, minio
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_REGION=ap-northeast-2
S3_BUCKET_NAME=cass-attachments

# Redis (for Celery/Cache)
REDIS_URL=redis://localhost:6379/0

# CSMS Integration
CSMS_API_BASE_URL=https://csms-api.example.com
CSMS_API_KEY=your-csms-api-key
CSMS_WEBHOOK_SECRET=your-webhook-secret

# Email/SMS (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-password
SMS_PROVIDER=twilio
SMS_API_KEY=your-sms-key
